<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookmarkMain"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/bookmarkImage"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.99"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/bookmarkTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/bookmarkSoustitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookmarkType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="TextView"
                android:layout_weight="0.9"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bookmarkDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                app:srcCompat="@drawable/button_delete" />

            <ImageView
                android:id="@+id/bookmarkLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                app:srcCompat="@drawable/button_link" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>