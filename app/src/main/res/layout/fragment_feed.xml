<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <HorizontalScrollView
        android:id="@+id/triReco"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scrollbars="none"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/tout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Aucun tri"></Button>
            <Button
                android:id="@+id/morceau"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Morceau"></Button>
            <Button
                android:id="@+id/album"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Album"></Button>
            <Button
                android:id="@+id/artiste"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Artiste"></Button>
            <Button
                android:id="@+id/film"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Film"></Button>
            <Button
                android:id="@+id/serie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Série"></Button>
            <Button
                android:id="@+id/jeu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Jeu Vidéo"></Button>
        </LinearLayout>

    </HorizontalScrollView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainerFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/triReco"
        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>