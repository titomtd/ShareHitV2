<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Application">

        <SwitchPreferenceCompat
            app:key="sombre"
            app:title="Mode sombre" />

        <ListPreference
            app:key="theme"
            app:title="Choisir un thème"
            app:defaultValue="theme_bleu"
            app:entries="@array/theme_dispo"
            app:entryValues="@array/theme_value" />

    </PreferenceCategory>


    <PreferenceCategory app:title="Compte">
        <Preference
            app:key="signout"
            app:title="Déconnexion"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
